{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist/js",
    "rootDir": "./src/ts",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules"]
}
