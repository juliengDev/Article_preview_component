{
  "name": "ts-project-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "lite-server",
    "build": "npm run build:ts && npm run build:sass && npm run copy:html",
    "build:ts": "tsc",
    "build:sass": "sass ./src/scss/main.scss:./public/css/style.css",
    "copy:html": "copyfiles -u 1 src/*.html .",
    "watch:ts": "tsc -w",
    "watch:sass": "sass --watch ./src/scss/main.scss:./public/css/style.css",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:sass\" \"npm run start\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^20.14.10",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "lite-server": "^2.6.1",
    "sass": "^1.77.8",
    "typescript": "^5.5.3"
  }
}
